      </action>
      <action dev="columbro" type="add">
		Updated to new Sourcesense repository
      </action>
    </release>
    <release version="1.1.0" date="2008-07-11" description="Public release">
      <action dev="columbro" type="add">
		Added full AMP lifecycle management.
      </action>
    </release>
